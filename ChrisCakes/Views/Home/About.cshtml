
@{
    ViewBag.Title = "About";
}
<div class="row">
    <div class='col-sm-4'>
        <div class="form-group">
            <label for="datetimepicker1">Event Start Date and Time</label>
            <div class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <div class='input-group date' id='datetimepicker2'>
                <input type='text' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="datetimepicker1">Event End Time</label>

            <div class='input-group date' id='datetimepicker3'>
                <input type='text' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="fundraiser">Is this event a fundraiser?</label>
            <input type="checkbox" class="form-control" name="fundraiser">
        </div>
        <div class="form-group">
            <label for="typeoffundraiser">Type of fundraiser you wish to book?</label>
            <select name="typeoffundraiser" id="typeoffundraiser">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="typeofbreakfast">Type of Premier Breakfast you wish to book?</label>
            <select name="typeofbreakfast" id="typeofbreakfast">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="typeofmenusnmore">Type of Menus n More you wish to book?</label>
            <select name="typeofmenusnmore" id="typeofmenusnmore">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>
        <div class="form-group">
            <label for="fundraiser">Will you have 2-3 volunteers?</label>
            <input type="checkbox" class="form-control" name="volunteers">
        </div>
        <div class="form-group">
            <label for="orgnanizationName">Organization Name</label>
            <input type="text" name="organizationname" id="organizationname">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Serving Address</label>
            <input type="text" name="servingaddress" id="servingaddress">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">City</label>
            <input type="text" name="city" id="city">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">
                State<label>
                    <input type="text" name="state" id="state">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Zip Code</label>
            <input type="text" name="zip" id="zip">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Contact Name</label>
            <input type="text" name="contactname" id="contactname">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Contact Phone Number</label>
            <input type="text" name="contactphone" id="contactphone">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Phone number for day of event</label>
            <input type="text" name="eventphone" id="eventphone">
        </div>


        <div class="form-group">
            <label for="orgnanizationName">Contact Email Address</label>
            <input type="text" name="contactemail" id="contactemail">
        </div>


        <div class="form-group">
            <label for="typeofmenusnmore">Where did you hear about us?</label>
            <select name="wherediyouhearaboutus" id="wheredidyouhearaboutus">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
            <div class="form-group">
                <label for="orgnanizationName">Message</label>
                <textarea name="message" id="message" class="col-sm-12"></textarea>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({
                    format: 'LL'
                });
            });
        </script>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker2').datetimepicker({
                    format: 'LT'
                });
            });
        </script>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker3').datetimepicker({
                    format: 'LT'
                });
            });
        </script>
    </div>
</div>


